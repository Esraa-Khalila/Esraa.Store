@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "RoleList";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h1>RoleList</h1>

@if (Model.Any())
{

    <div class="col-8">
        <a asp-action="CreateRole" asp-controller="Account" class="btn btn-dark m-2">Create new Role</a>
    </div>

    @foreach (var Role in Model)
    {

        <center>
            <div class="col-lg-12 col-md-10 col-sm-10">
                <div class="card">
                    <div class="card-header">
                        Role Name : @Role.Id
                    </div>

                    <div class="card-body ">
                        <h5 class="card-title">@Role.Name</h5>

                    </div>

                    <div class="card-footer">

                        <a asp-controller="Account" asp-action="EditRole" asp-route-id="@Role.Id" class="btn btn-dark">Edit</a>
                        <a asp-action="Index" class="btn btn-outline-danger">Back</a>
                    </div>

                </div>
            </div>
        </center>

    }
}

else
{
    <center>
        <div class="col-lg-11 col-md-10 col-sm-10">
            <div class="card h-100 w-50">
                <div class="card-header">
                    No Role yet...
                </div>

                <div class="card-body ">
                    <div class="col-6">
                        <a asp-action="CreateRole" asp-controller="Account" class="btn btn-dark m-2">Create new Role</a>
                    </div>

                </div>

                <div class="card-footer">
                    No Role..
                </div>

            </div>
        </div>
    </center>
}


