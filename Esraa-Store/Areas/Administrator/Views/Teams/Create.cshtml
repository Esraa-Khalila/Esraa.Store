@model Esraa_Store.Models.ViewModels.TeamViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data" class="btn btn-dark">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TitleJob" class="control-label"></label>
                <input asp-for="TitleJob" class="form-control" />
                <span asp-validation-for="TitleJob" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="dateTime" class="control-label "></label>
                <input asp-for="dateTime" class="form-control" />
                <span asp-validation-for="dateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="custom-file">

                    <input asp-for="Image" type="file" class="custom-control-input" id="customFile" />
                    <label class="custom-control-label" id="customFile">Choose File</label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> 
                <a asp-action="Index" class="btn btn-danger">Back</a>
            </div>
        </form>
    </div>
</div>


