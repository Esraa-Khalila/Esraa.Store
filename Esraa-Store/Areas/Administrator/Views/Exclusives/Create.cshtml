@model Esraa_Store.Models.ViewModels.ExclusiveViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Exclusive</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="custom-file">
                    <input asp-for="exclusiveImg" type="file" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="exclusiveTilte" class="control-label">Exclusive Title</label>
                <input asp-for="exclusiveTilte" class="form-control" />
                <span asp-validation-for="exclusiveTilte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="exclusiveDec" class="control-label">Exclusive Description</label>
                <input asp-for="exclusiveDec" class="form-control" />
                <span asp-validation-for="exclusiveDec" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark" /> 
                <a asp-action="Index" class="btn btn-danger"  >Back to List</a>
            </div>
        </form>
    </div>
</div>


