@model Esraa_Store.Models.Exclusive

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Exclusive</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ExclusiveId" />
            <div class="form-group">
                <label asp-for="exclusiveImg" class="control-label"></label>
                <input asp-for="exclusiveImg" class="form-control" />
                <span asp-validation-for="exclusiveImg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="exclusiveTilte" class="control-label"></label>
                <input asp-for="exclusiveTilte" class="form-control" />
                <span asp-validation-for="exclusiveTilte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="exclusiveDec" class="control-label"></label>
                <input asp-for="exclusiveDec" class="form-control" />
                <span asp-validation-for="exclusiveDec" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger">Back</a>
            </div>
        </form>
    </div>
</div>


