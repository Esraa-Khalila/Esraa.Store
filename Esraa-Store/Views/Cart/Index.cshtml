    <!-- Breadcrumb Start -->
<div class="breadcrumb-wrap">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Products</a></li>
            <li class="breadcrumb-item active">Cart</li>
        </ul>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Cart Start -->
<div class="cart-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <div class="cart-page-inner">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="thead-dark">
                                <tr>
                                  
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th>Remove</th>
                                </tr>
                            </thead>
                            <tbody class="align-middle">
                                @foreach (var item in ViewBag.cart)
                                {
                                <tr>
                                    
                                    <td>

                                        <div class="img">
                                            <a href="#"><img src="~/FeaturedImg/@item.featured.featuredImg" alt="Image"></a>
                                            <p>@item.featured.featuredTilte</p>
                                        </div>
                                    </td>
                                    <td>$@item.featured.price</td>
                                    <td>
                                        <div class="qty">
                                            <button class="btn-minus" asp-action="isExist" asp-controller="Cart" asp-route-id="@item.featured.FeaturedId"><i class="fa fa-minus"></i></button>
                                            <input type="text" value="@item.Quantity">
                                            <button class="btn-plus" asp-action="plus" asp-controller="Cart" asp-route-id="@item.featured.FeaturedId"><i class="fa fa-plus"></i></button>
                                        </div>
                                    </td>
                                
                               
                                     <td>$@(item.featured.price * item.Quantity)</td>
                                        <td><button><i class="fa fa-trash" asp-controller="Cart" asp-action="remove" asp-route-id="@item.featured.FeaturedId"></i></button></td>

                                   
                                </tr>
                                }
                            </tbody>
                            
                        </table>
                    </div>
                </div>
            </div>

            
            <div class="col-lg-4">
                <div class="cart-page-inner">
                    <div class="row">
                        <div class="col-md-12">
                          
                        </div>
                        <div class="col-md-12">
                            <div class="cart-summary">
                                <div class="cart-content">
                                    <h1>Cart Summary</h1>
                                    <p>Sub Total<span>$99</span></p>
                                    <p>Shipping Cost<span>$1</span></p>
                                    <h2>Grand Total<span>$  @ViewBag.total</span></h2>

                                </div>
                                <div class="cart-btn">
                                    <button>Update Cart</button>
                                    <button><a asp-controller="Home" asp-action="index" class="text-white">Continue Shopping</a></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->

